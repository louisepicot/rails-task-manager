<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<%= link_to "new task", new_task_path %>
<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.description %></p>
  <%= link_to "edit", edit_task_path(task) %>
       <%= link_to "delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" }  %>
<% end %>
